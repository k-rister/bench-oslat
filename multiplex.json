{
  "presets": {
  },
  "validations": {
    "integer_gt_zero": {
      "description": "a whole number > 0",
      "args": [
        "duration",
        "network-connections",
        "stress-ng-tiles-per-cpu"
      ],
      "vals": "^[1-9][0-9]*$"
    },
    "binary": {
      "description": "0 or 1",
      "args": [
	    "trace-markers",
        "trace-control",
        "no-load-balance"
      ],
      "vals": "0|1"
    },
    "rtprio": {
      "description": "priority level of the oslat process (1-99)",
      "args": [
	    "rtprio"
      ],
      "vals": "^[1-9]$|^[1-9][0-9]$"
    },
    "yesno": {
      "description": "yes|no",
      "args": [
        "sysinfo-test"
      ],
      "vals": "yes|no"
    },
    "onoff": {
      "description": "on|off",
      "args": [
	    "smt"
      ],
      "vals": "on|off"
    },
    "integer_range": {
      "description": "a range of whole numbers >= 0",
      "args": [
        "cpu-list",
        "cpu-main-thread"
      ],
      "vals": "(\\d+(-\\d+)?(,\\s*\\d+(-\\d+)?)*|\\d+(-\\d+)?)"
    }
  }
}
